import BaseLayout from "../layouts/BaseLayout.astro";
import { t, getLangFromUrl } from "../i18n/translations.js";

const lang = getLangFromUrl(Astro.url);
---

<BaseLayout>
    <section class="consultation-hero">
        <h2>Strategic Consultation</h2>
        <h3>Individual Relationship Strategy</h3>
        <p class="subtitle">Your first step to the relationship you've been dreaming of!</p>
    </section>

    <section class="consultation-process">
        <h3>What We'll Cover</h3>
        <div class="consultation-grid">
            <div class="consultation-item">
                <h4>Life Situation Analysis</h4>
                <p>Analysis of your current life situation and factors that have influenced it.</p>
            </div>
            <div class="consultation-item">
                <h4>Market Assessment</h4>
                <p>Evaluation of your prospects in the marriage market and compatibility level.</p>
            </div>
            <div class="consultation-item">
                <h4>Partner Optimization</h4>
                <p>Recommendations on partner type selection and optimizing compatibility conditions, including physiological aspects when needed.</p>
            </div>
            <div class="consultation-item">
                <h4>Criteria Formation</h4>
                <p>Formation and regular adjustment of your partner requirements.</p>
            </div>
            <div class="consultation-item">
                <h4>Search Strategy</h4>
                <p>Determining search strategy and specific actions that can lead to stable relationships.</p>
            </div>
        </div>
    </section>

    <section class="consultation-outcomes">
        <h3>What You'll Leave With</h3>
        <div class="outcomes-list">
            <div class="outcome">
                ✓ Clear understanding of your real resources, strengths, and competitive advantages
            </div>
            <div class="outcome">
                ✓ Refined partner selection criteria aligned with your goals and values
            </div>
            <div class="outcome">
                ✓ Individual recommendations for increasing attractiveness to target partners
            </div>
            <div class="outcome">
                ✓ Transparent roadmap for further work: cooperation format, roles, stages, timelines
            </div>
        </div>
    </section>

    <section class="consultation-details">
        <div class="details-grid">
            <div class="detail">
                <h4>Format</h4>
                <p>Online or In-Person</p>
            </div>
            <div class="detail">
                <h4>Duration</h4>
                <p>120 minutes / 2 hours</p>
            </div>
            <div class="detail">
                <h4>Investment</h4>
                <p>Contact for pricing</p>
            </div>
        </div>
    </section>

    <section class="cta-section">
        <h3>Ready to Begin?</h3>
        <p>Take the first step toward the meaningful relationship you deserve.</p>
        <a href={lang === 'en' ? '/contact' : `/${lang}/contact`} class="cta-button">Book Your Consultation</a>
    </section>
</BaseLayout>

<style>
    .consultation-hero {
        text-align: center;
        padding: 4rem 0 2rem;
    }

    .consultation-hero h2 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: #2c3e50;
    }

    .consultation-hero h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #667eea;
    }

    .subtitle {
        font-size: 1.2rem;
        color: #666;
        font-style: italic;
    }

    .consultation-process {
        padding: 3rem 0;
    }

    .consultation-process h3 {
        text-align: center;
        margin-bottom: 3rem;
        font-size: 2.2rem;
        color: #2c3e50;
    }

    .consultation-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .consultation-item {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 10px;
        border-left: 4px solid #667eea;
    }

    .consultation-item h4 {
        margin-bottom: 1rem;
        color: #2c3e50;
    }

    .consultation-outcomes {
        padding: 3rem 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        margin: 2rem 0;
        border-radius: 10px;
    }

    .consultation-outcomes h3 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        color: #2c3e50;
    }

    .outcomes-list {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .outcome {
        background: white;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        font-size: 1.1rem;
        color: #333;
        border-left: 4px solid #667eea;
    }

    .consultation-details {
        padding: 3rem 0;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .detail {
        text-align: center;
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .detail h4 {
        color: #667eea;
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .detail p {
        color: #333;
        font-size: 1.1rem;
    }

    .cta-section {
        text-align: center;
        padding: 4rem 0;
    }

    .cta-section h3 {
        margin-bottom: 1rem;
        font-size: 2rem;
        color: #2c3e50;
    }

    .cta-section p {
        margin-bottom: 2rem;
        font-size: 1.1rem;
        color: #666;
    }

    .cta-button {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 2rem;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 500;
        transition: transform 0.3s;
    }

    .cta-button:hover {
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .consultation-hero h2 {
            font-size: 2rem;
        }
    }
</style>
